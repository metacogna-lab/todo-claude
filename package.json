{
  "name": "claude-obsidian-todoist-linear-assistant",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Claude Agent SDK workflow that captures notes in Obsidian, tasks in Todoist, and tickets in Linear.",
  "license": "UNLICENSED",
  "packageManager": "bun@1.1.22",
  "engines": {
    "bun": ">=1.1.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun src/index.ts",
    "dev:api": "bun src/graphql/server.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "contracts:typecheck": "bun run --cwd packages/contracts typecheck",
    "contracts:build": "bun run --cwd packages/contracts build",
    "worktrees:launch": "bun scripts/launch-worktrees.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.41",
    "@graphql-yoga/node": "^3.9.1",
    "graphql-yoga": "^5.6.0",
    "graphql": "^16.8.1",
    "langfuse": "^3.0.0",
    "zod": "^3.23.8",
    "dotenv": "^16.4.5",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "undici": "^6.19.8",
    "commander": "^12.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "typescript": "^5.6.3",
    "tsx": "^4.19.1",
    "eslint": "^9.9.0",
    "@eslint/js": "^9.9.0",
    "vitest": "^2.0.5",
    "@types/bun": "latest"
  },
  "module": "src/index.ts"
}
