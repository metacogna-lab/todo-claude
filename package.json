{
  "name": "claude-obsidian-todoist-linear-assistant",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Claude Agent SDK workflow that captures notes in Obsidian, tasks in Todoist, and tickets in Linear.",
  "license": "UNLICENSED",
  "packageManager": "bun@1.1.22",
  "engines": {
    "bun": ">=1.1.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun src/index.ts",
    "dev:api": "bun src/graphql/server.ts",
    "build": "bun run contracts:build && tsc -p tsconfig.json",
    "start": "bun dist/index.js",
    "lint": "./node_modules/.bin/eslint .",
    "format": "./node_modules/.bin/prettier --write .",
    "format:check": "./node_modules/.bin/prettier --check .",
    "test": "vitest run",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "contracts:typecheck": "bun run --cwd packages/contracts typecheck",
    "contracts:build": "bun run --cwd packages/contracts build",
    "worktrees:launch": "bun scripts/launch-worktrees.ts"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.41",
    "@assistant/contracts": "workspace:*",
    "@graphql-yoga/node": "^3.9.1",
    "@langfuse/otel": "^4.6.1",
    "@langfuse/tracing": "^4.6.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/sdk-node": "^0.212.0",
    "commander": "^12.1.0",
    "dotenv": "^16.4.5",
    "graphql": "^16.8.1",
    "graphql-type-json": "^0.3.2",
    "graphql-yoga": "^5.6.0",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "undici": "^6.19.8",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/bun": "latest",
    "@types/node": "^22.10.0",
    "@typescript-eslint/eslint-plugin": "^8.55.0",
    "@typescript-eslint/parser": "^8.55.0",
    "eslint": "^9.9.0",
    "prettier": "^3.8.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.3",
    "vitest": "^2.0.5"
  },
  "module": "src/index.ts"
}
